{
  "name": "crud-api",
  "version": "1.0.0",
  "main": "src/server.ts",
  "scripts": {
    "start:prod": "npm run build && npm run prod",
    "prod": "node dist/server.js",
    "build": "tsc",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "prod:cluster": "node dist/server_cluster.js",
    "cluster:dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/server_cluster.ts",
    "cluster:prod": "npm run build && npm run prod:cluster",
    "lint": "eslint --ext .js,.ts --fix src/"
  },
  "engines": {
    "node": ">=16.0.0 <17"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "jest": "^28.1.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.3",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "@types/node": "^17.0.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "i": "^0.3.7",
    "lint-staged": "12.0.3",
    "nodemon": "2.0.15",
    "npm": "^8.12.2",
    "prettier": "2.4.1",
    "ts-node": "^10.4.0"
  },
  "nodemonConfig": {
    "events": {
      "start": "cls || clear"
    }
  }
}
